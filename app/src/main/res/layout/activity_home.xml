<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/homeAct"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/splash"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@color/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/appicon"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200sp"
            android:src="@drawable/matematicas"
            android:layout_width="130sp"
            android:layout_height="130sp"/>

        <TextView
            android:fontFamily="@font/arciform"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_below="@id/appicon"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/logoita"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="100sp"
            android:layout_height="100sp"/>

        <TextView
            android:fontFamily="@font/arciform"
            android:layout_marginBottom="10sp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"
            android:text="@string/instituto_tecnol_gico_de_apizaco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <FrameLayout
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:id="@+id/FragmentHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:visibility="gone"
        android:layout_gravity="start"
        android:id="@+id/menula"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10sp"
                    android:id="@+id/backmenubutton"
                    android:src="@drawable/ic_backmenu"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:contentDescription="@string/back" />

                <ImageView
                    android:padding="10sp"
                    android:id="@+id/closemenu"
                    android:src="@drawable/ic_close"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:contentDescription="@string/close" />

                <RelativeLayout
                        android:layout_marginTop="10sp"
                        android:id="@+id/images"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bunds_rounded">

                    <ImageView
                            android:id="@+id/menuimage"
                            android:layout_centerInParent="true"
                            android:src="@drawable/matematicas"
                            android:layout_width="70sp"
                            android:layout_height="70sp"
                            android:contentDescription="@string/todo" />

                </RelativeLayout>

                <TextView
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/arciform"
                        android:layout_marginBottom="10sp"
                        android:textSize="25sp"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/images"
                        android:text="@string/metodos_numericos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
                android:background="#ffffff"
                android:layout_below="@id/cardv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/List"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:choiceMode="singleChoice"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:background="#ffffff"/>

                <LinearLayout
                        android:id="@+id/configuration"
                        android:layout_below="@id/List"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:padding="15sp"
                            android:src="@drawable/ic_setting"
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            android:contentDescription="@string/todo" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/arciform"
                            android:textSize="20sp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="5sp"
                            android:text="@string/configuraciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>