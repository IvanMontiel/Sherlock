<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/homeAct"
        tools:context=".HomeActivity">

    <fragment
            android:id="@+id/FragmentHost"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_graph"/>

    <RelativeLayout
            android:id="@+id/menula"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                        android:layout_marginTop="10sp"
                        android:id="@+id/images"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="250dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="#8ee7fa">

                    <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="250dp"
                            app:cardBackgroundColor="#8ee7fa"
                            android:layout_gravity="center">

                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/matematicas"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:contentDescription="@string/todo" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <TextView
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/displayregular"
                        android:layout_marginBottom="10sp"
                        android:textSize="20sp"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/images"
                        android:text="@string/metodos_numericos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <ScrollView
                android:background="#ffffff"
                android:layout_below="@id/cardv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/List"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:choiceMode="singleChoice"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:background="#ffffff"/>

                <LinearLayout
                        android:id="@+id/configuration"
                        android:layout_below="@id/List"
                        android:layout_width="match_parent"
                        android:background="#ffffff"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:padding="15sp"
                            android:src="@drawable/ic_setting"
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            android:contentDescription="@string/todo" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/displayregular"
                                android:textSize="20sp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5sp"
                                android:text="@string/configuraciones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>