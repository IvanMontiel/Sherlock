<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LinearInterpolationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:background="@drawable/gradient"
                android:transitionName="card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/title"
                    android:padding="10sp"
                    android:background="#42D6F2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/menicon"
                        android:src="@drawable/ic_menu"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:padding="5sp"
                        android:contentDescription="@string/menuicon"/>

                    <LinearLayout
                        android:layout_marginStart="35sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/bucle"
                            android:transitionName="itemImage"
                            app:layout_collapseMode="parallax"
                            android:layout_marginEnd="10sp"
                            android:id="@+id/itemImage"
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            android:contentDescription="@string/todo"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/titleContent"
                                android:transitionName="itemTittle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/interpolacion_lineal"
                                android:fontFamily="@font/arciform"
                                android:textSize="25sp"
                                android:layout_marginTop="15sp"
                                />

                            <TextView
                                android:textColor="#ffffff"
                                android:id="@+id/descriptionContent"
                                android:transitionName="itemContent"
                                android:fontFamily="@font/arciform"
                                android:layout_below="@id/titleContent"
                                android:text="@string/todo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/pares"
                android:layout_centerInParent="true"
                android:layout_below="@id/card"
                android:text="@string/inserta_los_valores_de_los_pares_ordenados"
                android:fontFamily="@font/arciform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:textSize="15sp"
                android:textColor="#000000"
                />

            <LinearLayout
                android:id="@+id/cont"
                android:layout_centerInParent="true"
                android:layout_below="@id/pares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/first"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputA"
                        android:layout_width="wrap_content"
                        android:padding="5sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/x"
                        android:fontFamily="@font/arciform"
                        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
                        app:errorTextAppearance="@style/AppTheme.EditTextError"
                        tools:ignore="RtlSymmetry">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/x1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arciform"
                            android:inputType="numberDecimal|numberPassword|textVisiblePassword"
                            android:theme="@style/EditText"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputBl"
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arciform"
                        android:hint="@string/b"
                        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
                        app:errorTextAppearance="@style/AppTheme.EditTextError"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/y1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/arciform"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal|numberPassword|textVisiblePassword"
                            android:theme="@style/EditText"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second"
                    android:padding="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputA1"
                        android:layout_width="wrap_content"
                        android:padding="5sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/a"
                        android:fontFamily="@font/arciform"
                        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
                        app:errorTextAppearance="@style/AppTheme.EditTextError"
                        tools:ignore="RtlSymmetry">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/x2"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arciform"
                            android:inputType="numberDecimal|numberPassword|textVisiblePassword"
                            android:theme="@style/EditText"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinputBl1"
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arciform"
                        android:hint="@string/b"
                        app:hintTextAppearance="@style/AppTheme.FloatingLabel"
                        app:errorTextAppearance="@style/AppTheme.EditTextError"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/y2"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/arciform"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal|numberPassword|textVisiblePassword"
                            android:theme="@style/EditText"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/calculate"
                android:layout_below="@id/cont"
                android:text="@string/calcular"
                android:padding="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/arciform"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>