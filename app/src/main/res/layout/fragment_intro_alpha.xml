<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bounded">

    <RelativeLayout
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentTop="true"
        android:id="@+id/iconapp"
        android:layout_centerInParent="true"
        android:background="@drawable/bunds_rounded"
        android:layout_width="100sp"
        android:layout_height="100sp">

        <ImageView
            android:src="@drawable/matematicas"
            android:contentDescription="@string/todo"
            android:layout_centerInParent="true"
            android:layout_width="70sp"
            android:layout_height="70sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:text="@string/app_name"
        android:fontFamily="@font/arciform"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_centerInParent="true"
        android:layout_below="@id/iconapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/ter"
        android:layout_below="@id/title"
        android:layout_marginStart="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="15sp"
        android:fontFamily="@font/arciform"
        android:text="@string/durante_la_duracion_del_programa_de_acceso_temprano_podras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cuar"
        android:layout_below="@id/ter"
        android:layout_marginStart="15sp"
        android:layout_marginTop="8sp"
        android:fontFamily="@font/arciform"
        android:text="@string/esta_aplicacion_no_es_transferible_hasta_su_fecha_de_lanzamiento_oficial_programada_el_dia_19_de_septiembre_de_2019_a_las_9_30_horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sec"
        android:layout_below="@id/cuar"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:text="@string/gracias_por_participar_en_nuestro_progama_de_acceso_temprano"
        android:fontFamily="@font/arciform"
        android:layout_marginEnd="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/aceptar"
        android:padding="20sp"
        android:layout_centerInParent="true"
        android:textColor="#27aac3"
        android:text="@string/aceptar"
        android:layout_below="@id/sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>